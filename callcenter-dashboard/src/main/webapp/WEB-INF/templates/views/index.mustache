    <![endif]-->
  </head>
  <body>
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
		<div class="navbar-header">
		  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		  </button>
		  <a class="navbar-brand" href="#">Callcenter Thingy</a>
		</div>

		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
		  <ul class="nav navbar-nav">
			<li class="active"><a href="#">Find customers <span class="sr-only">(current)</span></a></li>
		  </ul>
		  <ul class="nav navbar-nav navbar-right">
			<li><a href="https://github.com/cmfcmf/sap-hana"><i class="fa fa-external-link fa-fw"></i> GitHub</a></li>
		  </ul>
		</div>
	  </div>
	</nav>



	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h1>Find customers</h1>
				<p>Please insert customer id or name and zip code.</p>

				<form class="form" method="post" action="find-customer">
					<div class="form-group">
						<input class="form-control" id="customerId" aria-label="Customer Id" placeholder="Customer Id" type="text">
					</div>
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<input class="form-control" id="customerName" aria-label="Customer Name" placeholder="Customer Name" type="text">
							</div>
						</div>
						<div class="col-sm-6">
							<div class="form-group">
								<input class="form-control" id="customerZip" aria-label="Customer Zip code" placeholder="Customer Zip code" type="text">
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-block btn-primary">
						Search
					</button>
				</form>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<h2>Results</h2>
				<div class="panel panel-default">
				  <div class="panel-heading">Harry James Potter</div>
				  <div class="panel-body">
					  <dl style="margin-bottom: 0">
						<dt>Address</dt>
						<dd>Privet Drive Nr. 4, Little Whinging</dd>
					  </dl>
				  </div>
				  <table class="table">
					<thead>
					<tr>
						<th>Year</th>
						<th>Umsatz</th>
						<th>Gewinn</th>
					</tr>
					</thead>
					<tbody>
					<tr>
						<td>2013</td>
						<td>20.000 &euro;</td>
						<td>5.000 &euro;</td>
					</tr>
					<tr>
						<td>2014</td>
						<td>80.000 &euro;</td>
						<td>2.000 &euro;</td>
					</tr>
					</tbody>
				  </table>
				  <div class="panel-body">
					<h3 style="margin: 0">Last interactions</h3>
				  </div>
				  <table class="table">
					<thead>
					<tr>
						<th>Product</th>
						<th>Money</th>
						<th>Date</th>
					</tr>
					</thead>
					<tbody>
					<tr>
						<td>F-P10</td>
						<td>20.000 &euro;</td>
						<td>07/08/2035</td>
					</tr>
					<tr>
						<td>P-106</td>
						<td>80.000 &euro;</td>
						<td>11/03/2015</td>
					</tr>
					</tbody>
				  </table>
				</div>
			</div>
		</div>
	</div>



